// for ideal para quando o número de iterações é conhecido. Inclui a inicialização, condição e incremento no cabeçalho do laço.
let eu = 'Eduardo';
let euCompleto = '';

for (let i = 0; i < eu.length; i++) {
    euCompleto += eu[i];
}
console.log('log for: ' +euCompleto);

// while: Útil quando o número de iterações não é conhecido e depende de uma condição que é verificada antes de cada iteração.
let i = 0;
while (i < eu.length) {
    console.log('log while: ' + eu[i]);
    i++;
}

// do-while: Semelhante ao while, mas garante que o bloco de código seja executado pelo menos uma vez, pois a condição é verificada após a execução do bloco.
let iterador = 0;
do {
    console.log('log do-while: ' + eu[iterador]);
    iterador++;
} while (iterador < eu.length);
